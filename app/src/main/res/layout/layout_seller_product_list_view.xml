<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Product"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <LinearLayout android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/ProductImage"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            style="@style/list_view_product_image"
            android:clickable="true"/>
        <LinearLayout android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/ProductTitle"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                style="@style/list_view_product_title"/>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView android:id="@+id/ProductOldPrice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/list_view_product_old_price"/>
                <TextView android:id="@+id/ProductCurrentPrice"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/list_view_product_current_price"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">
                <TextView android:id="@+id/DateAddedLabel"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/date_added_label"
                    android:textSize="@dimen/abc_text_size_small_material" />
                <TextView android:id="@+id/DateAdded"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/abc_text_size_small_material"
                    android:textColor="@color/black"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_quantity_label_list_view"
                        android:textSize="@dimen/abc_text_size_small_material" />
                    <TextView android:id="@+id/ProductQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_status_label"
                        android:textSize="@dimen/abc_text_size_small_material" />
                    <TextView android:id="@+id/ProductStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                <LinearLayout android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_quantity_sold"
                        android:textSize="@dimen/abc_text_size_small_material" />
                    <TextView android:id="@+id/ProductQuantitySold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_earned_label"
                        android:textSize="@dimen/abc_text_size_small_material" />
                    <TextView android:id="@+id/ProductEarned"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:paddingLeft="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
