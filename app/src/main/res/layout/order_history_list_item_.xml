<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">
    <TextView android:id="@+id/OrderHistoryTable_DateLabel"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_history_table_date"
        android:textSize="@dimen/abc_text_size_small_material"/>
    <TextView android:id="@+id/OrderHistoryDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_small_material"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/OrderHistoryTable_DateLabel"
        android:paddingLeft="5dp"/>
    <TextView android:id="@+id/OrderHistoryStatus"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_small_material"
        android:textColor="@color/black"
        android:paddingRight="5dp"/>
    <TextView android:id="@+id/OrderHistoryTable_StatusLabel"
        android:layout_toLeftOf="@id/OrderHistoryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_history_table_status"
        android:textSize="@dimen/abc_text_size_small_material"
        android:paddingRight="5dp"/>
    <TextView android:id="@+id/OrderHistoryComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_below="@id/OrderHistoryTable_DateLabel" />
</RelativeLayout>
