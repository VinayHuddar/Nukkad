<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">
            <TextView android:id="@+id/OrderHistoryTable_DateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_history_table_date"
                android:textSize="@dimen/abc_text_size_small_material"/>
            <TextView android:id="@+id/OrderHistoryDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@color/black"
                android:paddingLeft="5dp"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right">
            <TextView android:id="@+id/OrderHistoryTable_StatusLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_history_table_status"
                android:textSize="@dimen/abc_text_size_small_material"
                android:paddingRight="5dp"
                android:gravity="right"
                android:layout_gravity="right"/>
            <TextView android:id="@+id/OrderHistoryStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_small_material"
                android:textColor="@color/black"
                android:paddingRight="5dp"
                android:layout_gravity="right"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>
    <TextView android:id="@+id/OrderHistoryComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/abc_text_size_small_material"
        android:layout_below="@id/OrderHistoryTable_DateLabel" />
</LinearLayout>
